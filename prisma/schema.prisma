generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Poll {
  id        Int      @id @default(autoincrement())
  question  String
  options   Option[]
}

model Option {
  id        Int      @id @default(autoincrement())
  text      String
  votes     Int      @default(0)
  pollId    Int
  poll      Poll     @relation(fields: [pollId], references: [id])
}